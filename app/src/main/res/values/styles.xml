<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">#000</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="toolbarStyle">@style/ColdPod.Toolbar</item>
        <item name="android:statusBarColor">@color/primary_dark_color</item>
        <item name="android:windowAnimationStyle">@style/ColdPod.ActivityAnimation</item>
    </style>

    <style name="ColdPod" parent="AppTheme" />

    <!--Toolbar Style-->
    <style name="ColdPod.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="ColdPod.Toolbar.ToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ColdPod.Toolbar.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ColdPod.ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>
