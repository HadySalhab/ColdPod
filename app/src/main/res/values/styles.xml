<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="toolbarStyle">@style/ColdPod.Toolbar</item>
    </style>

    <style name="ColdPod" parent="AppTheme"/>

    <!--Toolbar Style-->
    <style name="ColdPod.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ColdPod.Toolbar.ToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="ColdPod.Toolbar.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
